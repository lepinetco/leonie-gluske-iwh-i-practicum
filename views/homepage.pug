doctype html 
html 
    head 
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title #{title || 'Team'}
        link(rel="stylesheet", href="/css/style.css")
    body 
        header 
            .header-container 
                h1.header-title Team 
                nav.header-btn 
                    a.btn(href="/update-team") Add a New Team Member 
        main 
            .main-container
                if rows && rows.length 
                    table.table 
                        thead 
                            tr 
                                th(scope="col") ID 
                                th(scope="Name") Member ID
                                th(scope="Description") Member Name
                                th(scope="Author") Member Details
                                th(scope="Author") Member Designation
                        tbody 
                            each row in rows 
                                tr 
                                    td= row.id 
                                        each p in properties 
                                            td= row[p] || '_'
                else 
                    .no-row 
                        h4 No Records Found.